{
  "name": "test-ip-graphql",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "author": "Jayraj Kapadia",
  "license": "ISC",
  "scripts": {
    "lint": "eslint src index.js --color --fix",
    "p": "prettier --write 'src/**/*.js'",
    "p:w": "onchange 'src/**/*.js' -- prettier --write {{changed}}",
    "dev": "nodemon -e js,graphql --exec babel-node src/index.js  --require dotenv/config",
    "clean": "rm -rf build && mkdir build",
    "build": "npm run clean && babel src -d build && npm run-script copy-to-dist",
    "copy-to-dist": "copyfiles --up 1 src/modules/**/*.graphql src/firebaseServices/* build",
    "start": "node -r dotenv/config build/index.js",
    "production": "NODE_ENV=production node -r dotenv/config build/index.js"
  },
  "dependencies": {
    "@sentry/node": "^6.2.5",
    "apollo-server-express": "^2.21.0",
    "babel-node": "^0.0.1-security",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "geoip-lite": "^1.4.2",
    "graphql": "^15.5.0",
    "graphql-log": "^0.1.3",
    "graphql-middleware": "^6.0.4",
    "graphql-middleware-sentry": "^3.2.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-scalars": "^1.0.9",
    "graphql-shield": "^7.2.0",
    "graphql-tools": "^7.0.4",
    "graphql-voyager": "^1.0.0-rc.28",
    "merge-graphql-schemas": "1.7.8",
    "path": "^0.12.7",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/node": "^7.13.0",
    "@babel/plugin-proposal-class-properties": "7.13.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/preset-env": "7.13.9",
    "babel-eslint": "^10.1.0",
    "copyfiles": "^2.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1"
  }
}